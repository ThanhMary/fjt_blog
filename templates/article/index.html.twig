{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Article index</h1>

    <table class="table">
        <thead>
            <tr>
              
                <th>Creation_date</th>
                <th>Title</th>
                <th>Subtitle</th>
                <th>Content</th>
                <th>State</th>
                <th>Picture_path</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                
                <td>{{ article.creationDate ? article.creationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.subtitle }}</td>
                <td>{{ article.content }}</td>
                <td>{{ article.state ? 'Yes' : 'No' }}</td>
                <td>{{ article.picturePath }}</td>
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}">Show</a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}">Edit</a>
                    <a href="{{ path('article_delete', {'id': article.id}) }}">Delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_new') }}">Create new</a>
{% endblock %}
