{% extends 'base.html.twig' %}

{% block title %}Se connecter !{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connectés en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
        </div>
    {% endif %}
<div class="container">
       <div class="row">
       <div class="col-md-5" style='border: 5px; padding: 20px; background-color: #3B5145;' >
       <img src="https://3cdhsv4crsio1kakza23qz4h-wpengine.netdna-ssl.com/wp-content/themes/login-radius/images/center-small/social-login--a-wealth-of-first-party-customer-data.svg"  style='width: 400px; height: 300px' alt="">
       </div>
           <div class="col-md-5" style='border: 5px; padding: 20px; background-color: #D5F5E3;'>
                <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>

               <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}">
                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Se souvenir de moi
                    </label>
                </div>
                <button class="btn btn-lg btn-outline-info float-right" type="submit"> Sign in  </button>
            </form>


        </div>
        <div class="col-md-2" style='border: 5px; padding: 20px; background-color: #3B5145;' >
        <img src="" alt="">
        </div>
{% endblock %}
