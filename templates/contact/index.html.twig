{% extends 'base.html.twig' %}

{% block title %}Index des contacts
{% endblock %}

{% block body %}
	<h3>Messages</h3>
	<div style='border: 5px; padding: 20px; background-color: #D5F5E3;'>
		<table class="table table-hover table-responsive-lg table-bordered">
			<thead>
				<tr>
					<th>Prénom</th>
					<th>Nom</th>
					<th>Email</th>
					<th>Téléphone</th>
					<th>Message</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for contact in contacts %}
					<tr>

						<td>{{ contact.firstName }}</td>
						<td>{{ contact.lastName }}</td>
						<td>{{ contact.email }}</td>
						<td>{{ contact.telephone }}</td>
						<td>{{ contact.message }}</td>
						<td>
							<a href="{{ path('contact_show', {'id': contact.id}) }}">Supprimer</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="7">aucune entrée trouvée</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
