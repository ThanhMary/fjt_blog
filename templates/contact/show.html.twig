{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <h3>Contact</h3>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ contact.firstName }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ contact.lastName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contact.email }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ contact.telephone }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ contact.message }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('contact_index') }}">retour à la liste</a> ||
    <a href="{{ path('contact_edit', {'id': contact.id}) }}">éditer</a> || 
    {{ include('contact/_delete_form.html.twig') }}


{% endblock %}
